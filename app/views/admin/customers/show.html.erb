<div class="container">
    <div class="row">
        <div class="col">
            <h2><%= @customer.name%>さんの会員詳細</h2>
            <table class="table">
                <tr>
                    <th>会員ID</th>
                    <td><%= @customer.id %></td>
                </tr>
                <tr>
                    <th>氏名</th>
                    <td><%= @customer.name %></td>
                </tr>
                <tr>
                    <th>メールアドレス</th>
                    <td><%= @customer.email %></td>
                </tr>
                <tr>
                    <th>会員ステータス</th>
                    <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
                </tr>
            </table>
            <%= link_to "編集する",edit_admin_customer_path(@customer),class:'btn btn-success mb-2' %>
            <%= link_to "投稿一覧を見る","/admin/articles",class:'btn btn-success mb-2' %>
        </div>
    </div>
</div>