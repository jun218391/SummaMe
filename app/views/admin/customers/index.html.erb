<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
        <table class="table">
          <thead>
            <tr>
                <th>会員ID</th>   
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
            </tr>
          </thead>
                        
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
                <td><%= customer.id %></th>
                <td>
                  <%= link_to admin_customer_path(customer) do %>
                    <%= customer.name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td><%= customer.is_deleted ? '退会' : '有効' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
          <%= paginate @customers %>
        </div>
    </div>
</div>