<div class="container">
    <div class="row">
        <div class="col">
            <h2><%= @article.title %>の投稿詳細</h2>
            <table class="table">
                <tr>
                    <th>投稿ID</th>
                    <td><%= @article.id %></td>
                </tr>
                <tr>
                    <th>記事のタイトル</th>
                    <td><%= @article.title %></td>
                </tr>
                <tr>
                    <th>記事の内容</th>
                    <td><%= @article.content %></td>
                </tr>
                <tr>
                    <th>todo</th>
                    <td><%= @article.todo %></td>
                </tr>
            </table>
            <%= link_to "編集する",edit_admin_article_path(@article),class:'btn btn-success mb-2' %>
            <%= link_to "投稿一覧に戻る","/admin/articles",class:'btn btn-success mb-2' %>
        </div>
    </div>
</div>