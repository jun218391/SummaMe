<div class="container">
    <div class="row">
        <div class="col">
            <h2><%= @article.title %>の投稿詳細</h2>
            <table class="table">
              <tr>
                <th>本のタイトル</th>
              </tr>
              <tr>
                <td>
                    <%= image_tag @article.get_book_image(80,80) %>
                </td>
              </tr>
              <tr>
                <td><%= @article.title  %></td>
              </tr>
              <tr>
                <th>要約</th>
              </tr>
              <tr>
                <td><%= safe_join(@article.content.split("\n"),tag(:br)) %></td>
              </tr>
              <tr>
                <th>todo</th>
              </tr>
              <tr>
                <td><%= safe_join(@article.todo.split("\n"),tag(:br)) %></td>
              </tr>
                <tr>
                    <th>公開設定</th>
                </tr>
                <tr>
                    <td>
                        <% if @article.is_published_flag %>
                          公開
                        <% else %>
                          非公開
                        <% end %>
                    </td>
                </tr>
                <tr>
                <th>投稿日時</th>
              </tr>
              <tr>
                <td><%= @article.created_at.strftime('%Y/%m/%d/%H:%M:%S')  %></td>
              </tr>
            </table>
            <div>
                <%= "♡#{@article.favorites.count}いいね" %>
                <%= "#{@article.comments.count}件のコメント" %>
            </div>
            <div>
                <%= link_to "編集する",edit_admin_article_path(@article),class:'btn btn-success mb-2' %>
                <%= link_to "削除する", admin_article_path(@article), method: :delete, class: "btn btn-sm btn-danger" %>
                <%= link_to "投稿一覧に戻る","/admin/articles",class:'btn btn-success mb-2' %>
            </div>
        </div>
    </div>
</div>