<!--書籍検索機能（楽天ブックスAPI）-->
<div class="container">
    <div class='row'>
     　 <div class='col-2 font-weight-bolder m-4'>
          　<h5>書籍検索</h5>
    　　</div>
    </div>
    <div class="row">
        <div class="col m-5">
            <p>書籍画像から楽天ブックスに遷移します。</p>
            <%= form_with url: books_search_path,method: :get, local: true do |f| %>
                <!--text_fieldに本の題名を入力して検索、入力した内容はparams[:keyword]に格納-->
                <%= f.text_field :keyword, required: true, class: "form-control", placeholder: "本のタイトルを入力" %>
                <%= f.submit '検索', class: "form-control btn btn-success" %>
            <% end %>
            
            <!--@booksに検索結果が存在する際に表示-->
            <% if @books.present? %>
              <%= render 'public/books/book' %>
            <% end %>
        </div>
    </div>
</div>