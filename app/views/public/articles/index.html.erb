<div class="container">
        <%# if @book.errors.any? %>
          <%#= @book.errors.count %>件のエラーが発生しました
        <!--  <ul>-->
            <%# @book.errors.full_messages.each do |message| %>
              <li><%#= message %></li>
            <%# end %>
        <!--  </ul>-->
        <%# end %>
    <div class="row">
        
      <div class="col-md-8 offset-md-1">
          <h1>投稿一覧</h1>
            <table class="table">
              <thead>
                <tr>
                  <th></th>
                  <th>title</th>
                  <th>content</th>
                </tr>
              </thead>
              <tbody>
                <% @articles.each do |article| %>
                <tr>
                  <td><%= link_to "/" do %> <%#= image_tag book.user.get_profile_image(100,100) %> <% end %></td>
                  <td><%= link_to article.title, article_path(article)  %></td>
                  <td><%= article.content %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
     
  