<div class='container'>
  <div class='row'>
    <h3 class='m-5'>マイページ</h3>
  </div>

  <div class='row'>
    <h5 class='col-2 font-weight-bolder'>登録情報</h5>
    <%= link_to "編集する", customers_information_edit_path, class:'btn btn-success col-2' %>
  </div>

  <div class='row py-3'>
    <table class='table table-bordered'>
      <tr>
        <td class='col-3 table-secondary'>氏名</td>
        <td><%= @customer.name %></td>
      </tr>
      <tr>
        <td class='table-secondary'>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>

</div>